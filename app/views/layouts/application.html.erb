<!DOCTYPE HTML>

<html>
	<head>
		<title>Chair Lift</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag    'main', media: 'all' %>
  	<%= javascript_include_tag 'application' %>

		<!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->
	</head>
	<body id="top">
		<!-- Header -->
			<header id="header">
				<strong>chair lift.</strong>
			</header>

			<!--Top Nav--><% if user_signed_in? %>
			<nav class="fixed-nav-bar">
				<ul>
				<a class="homebutton"><%= button_to 'Home', lifts_path, id: 'homebutton', :method => :get %></a>
				<a class="addbutton"><%= button_to 'Add Lift', new_lift_path, id: 'addbutton', :method => :get %></a>
				<a class="signout"><%= button_to 'Sign Out', destroy_user_session_path, id: 'signout', :method => :delete %></a>
				<% if current_user.photo != nil %>
				<%= image_tag current_user.photo + "?type=large", class:"image avatar" %>
			</ul>
		</nav>
				<% end %>
				<% end %>

		<!-- Main -->
		<section id="one">
		  <div class="major">

			</div>
		</section>
				<div id="main">
				<%= yield %>
					<div><% flash.each do |name, msg| %>
					  <%= content_tag :div, msg, class: "alert alert-info" %>
					<% end %>
				</div>


			</div>
	</body>
</html>
